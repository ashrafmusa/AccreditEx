rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return isAuthenticated() ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role : null;
    }
    
    function isAdmin() {
      return getUserRole() == 'Admin';
    }
    
    function isProjectLead() {
      return getUserRole() in ['Admin', 'ProjectLead'];
    }
    
    function isAssignedToProject(projectId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers;
    }
    
    // Metadata collection (system use only)
    match /_metadata/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isProjectLead();
      allow update: if isAdmin() || isAssignedToProject(projectId);
      allow delete: if isAdmin();
    }
    
    // Documents collection
    match /documents/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Standards collection
    match /standards/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Accreditation Programs collection
    match /accreditationPrograms/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Departments collection
    match /departments/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Training Programs collection
    match /trainingPrograms/{docId} {
      allow read: if isAuthenticated();
      allow create: if isProjectLead();
      allow update: if isProjectLead();
      allow delete: if isAdmin();
    }
    
    // Competencies collection
    match /competencies/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Risks collection
    match /risks/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // App Settings collection (admin only)
    match /appSettings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}